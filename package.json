{
  "name": "heimruf-deck-builder",
  "version": "2.3.1",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "deploy": "npm run build && firebase deploy",
    "lint": "stylelint \"**/*.scss\" && ng lint && prettier . --check",
    "fix": "stylelint \"**/*.scss\" --fix && ng lint --fix && prettier . --write",
    "browsers": "browserslist && browserslist --coverage",
    "mine": "npm run mine:data && npm run mine:images",
    "mine:data": "node scripts/mine-card-data.js",
    "mine:images": "node scripts/mine-card-images.js",
    "analyze": "ng build --stats-json && webpack-bundle-analyzer dist/heimruf-deck-builder/stats.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/cdk": "^20.2.14",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/material": "^20.2.14",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@ngrx/effects": "^20.1.0",
    "@ngrx/entity": "^20.1.0",
    "@ngrx/operators": "^20.1.0",
    "@ngrx/router-store": "^20.1.0",
    "@ngrx/store": "^20.1.0",
    "@ngrx/store-devtools": "^20.1.0",
    "bootstrap": "~5.3.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@ngrx/eslint-plugin": "^20.1.0",
    "@ngrx/schematics": "^20.1.0",
    "@types/node": "^22.13.14",
    "angular-eslint": "^19.3.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-regexp": "^2.1.1",
    "eslint-plugin-rxjs-x": "^0.7.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "firebase": "^11.6.0",
    "husky": "^9.0.11",
    "node-fetch": "^3.3.2",
    "prettier": "^3.5.3",
    "stylelint": "^16.18.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^15.0.1",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.28.0",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
